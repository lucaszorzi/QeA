<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>

    <div class="container">
        <br>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>
        <% if(typeof respostas == 'object' && respostas.length > 0) { %>
            <br>
            <h3>Respostas</h3>
            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <%= resposta.corpo %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>Sem respostas!</p>
        <% } %>
        <br><br>
        <hr>
        <form method="POST" action="/responder">
            <h3 id="responda">Responda</h3>
            <textarea class="form-control" placeholder="Digite aqui sua resposta..." name="corpo"></textarea>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
</body>
<%- include ('partials/footer.ejs'); %>