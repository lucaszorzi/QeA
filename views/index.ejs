<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>

    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <h1>Perguntas</h1>
            </div>
            <div class="col-lg-2 ">
                <a href="/perguntar" class="btn btn-dark" id="btn-pergunta">Perguntar</a>
            </div>
        </div>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <a  style="color: inherit; text-decoration: none;" href="/pergunta/<%= pergunta.id %>"><h3><%= pergunta.titulo %></h3></a>
                </div>

                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>#responda"><button class="btn btn-dark">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>